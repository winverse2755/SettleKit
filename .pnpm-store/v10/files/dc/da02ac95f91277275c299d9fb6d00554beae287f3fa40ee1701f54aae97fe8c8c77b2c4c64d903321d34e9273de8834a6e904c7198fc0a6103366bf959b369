import { ZERO_ADDRESS } from "@morpho-org/morpho-ts";
import { type AddressLike } from "ethers";
export declare const safeGetAddress: (address: string) => `0x${string}`;
export declare const safeParseNumber: (value: number, decimals?: number) => bigint;
export declare const safeParseUnits: (strValue: string, decimals?: number) => bigint;
/**
 * Check if an address is the zero address, null, or undefined.
 *
 * @param address - The address to check, which can be a valid address, null, or undefined.
 * @returns True if the address is zero, null, or undefined; otherwise, false.
 */
export declare const isZeroAddressOrUnset: (address: string | null | undefined) => address is typeof ZERO_ADDRESS;
/**
 * Transform an AddressLike into a checksumed address
 *
 * @param address Address to transform
 */
export declare const getChecksumedAddress: (address: AddressLike) => Promise<`0x${string}`>;
